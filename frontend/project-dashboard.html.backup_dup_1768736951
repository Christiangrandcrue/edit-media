    <script>
        let projectId = null;
        let projectData = null;
        let assetsData = [];
        let selectedAssets = new Set(); // ID выбранных материалов
        let mastersData = [];
        let currentFilter = 'all';
// PATCH для project-dashboard.html
// Добавить после строки с определением переменных (после let assetsData = [];)

let selectedAssets = new Set(); // ID выбранных материалов

// Обновить функцию displayAssets (замена существующей)
function displayAssets() {
    const container = document.getElementById('assets-list');
    
    // Фильтрация
    const filtered = currentFilter === 'all' 
        ? assetsData 
        : assetsData.filter(a => a.asset_type === currentFilter);

    if (filtered.length === 0) {
        container.innerHTML = `
            <div class="col-span-full bg-gray-50 border border-gray-200 rounded-lg p-12 text-center">
                <i class="fas fa-folder-open text-gray-300 text-5xl mb-4"></i>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Нет материалов</h3>
                <p class="text-gray-600 mb-4">Загрузите видео-шоты для начала работы</p>
                <a href="/projects/new" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg">
                    <i class="fas fa-plus mr-2"></i>Загрузить
                </a>
            </div>
        `;
        return;
    }

    const typeIcons = {
        hook: '<i class="fas fa-fish text-green-600"></i>',
        mid: '<i class="fas fa-film text-blue-600"></i>',
        cta: '<i class="fas fa-bullhorn text-orange-600"></i>',
        target_video: '<i class="fas fa-video text-purple-600"></i>'
    };

    container.innerHTML = filtered.map(asset => {
        const isSelected = selectedAssets.has(asset.asset_id);
        return `
            <div class="bg-gray-50 border ${isSelected ? 'border-indigo-500 bg-indigo-50' : 'border-gray-200'} rounded-lg p-4 hover:shadow-md transition-all">
                <div class="flex items-start justify-between mb-3">
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" 
                            id="asset-${asset.asset_id}" 
                            ${isSelected ? 'checked' : ''}
                            onchange="toggleAssetSelection('${asset.asset_id}')"
                            class="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500">
                        <div class="flex items-center space-x-2">
                            ${typeIcons[asset.asset_type] || '<i class="fas fa-file"></i>'}
                            <span class="font-semibold text-gray-900">${asset.asset_type.toUpperCase()}</span>
                        </div>
                    </div>
                    <button onclick="deleteAsset('${asset.asset_id}')" class="text-red-600 hover:text-red-700">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                
                <p class="text-sm text-gray-700 font-medium mb-1 truncate ml-8" title="${escapeHtml(asset.original_filename)}">
                    ${escapeHtml(asset.original_filename)}
                </p>
                
                <p class="text-xs text-gray-500 ml-8">
                    ${(asset.file_size / 1024 / 1024).toFixed(2)} MB
                </p>
                
                <div class="mt-3 pt-3 border-t border-gray-200 text-xs text-gray-500 ml-8">
                    ${formatDate(asset.created_at)}
                </div>
            </div>
        `;
    }).join('');
    
    updateSelectionInfo();
}

        // Фильтр материалов
        function filterAssets(type) {
            currentFilter = type;
            
            // Обновить кнопки
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('bg-indigo-600', 'text-white');
                btn.classList.add('bg-gray-100', 'text-gray-700');
            });
            
            event.target.classList.remove('bg-gray-100', 'text-gray-700');
            event.target.classList.add('bg-indigo-600', 'text-white');
            
            displayAssets();
        }

        // Удалить материал
        async function deleteAsset(assetId) {
            if (!confirm('Удалить этот материал?')) return;

            try {
                const response = await fetch(`/api/projects/${projectId}/assets/${assetId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (!data.success) {
                    throw new Error(data.error || 'Ошибка удаления');
                }

                alert('Материал удалён');
                await loadProject(); // Перезагрузить данные
            } catch (error) {
                console.error('Error deleting asset:', error);
                alert('Ошибка удаления: ' + error.message);
            }
        }

        // Загрузить мастер-ролики
        async function loadMasters() {
            try {
                const response = await fetch(`/api/projects/${projectId}/master-videos`);
                const data = await response.json();

                if (!data.success) {
                    throw new Error(data.error || 'Ошибка загрузки мастер-роликов');
                }

                mastersData = data.master_videos || [];
                displayMasters();
            } catch (error) {
                console.error('Error loading masters:', error);
                document.getElementById('masters-list').innerHTML = `
                    <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
                        <i class="fas fa-exclamation-circle text-red-600 text-3xl mb-2"></i>
                        <p class="text-red-800">Ошибка загрузки: ${error.message}</p>
                    </div>
                `;
            }
        }

        // Отобразить мастер-ролики
        function displayMasters() {
            const container = document.getElementById('masters-list');

            if (mastersData.length === 0) {
                container.innerHTML = `
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-12 text-center">
                        <i class="fas fa-star text-gray-300 text-5xl mb-4"></i>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Нет мастер-роликов</h3>
                        <p class="text-gray-600 mb-4">Создайте мастер-ролик из загруженных материалов</p>
                        <button onclick="createMasterVideo()" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg">
                            <i class="fas fa-plus mr-2"></i>Создать мастер-ролик
                        </button>
                    </div>
                `;
                return;
            }

            container.innerHTML = mastersData.map(master => `
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <h3 class="text-lg font-bold text-gray-900 mb-2">${escapeHtml(master.name)}</h3>
                            <div class="flex items-center space-x-4 text-sm text-gray-600 mb-3">
                                <span class="px-2 py-1 rounded ${getStatusColor(master.status)}">${getStatusLabel(master.status)}</span>
                                ${master.approved ? '<span class="text-green-600"><i class="fas fa-check-circle mr-1"></i>Одобрен</span>' : ''}
                            </div>
                            <p class="text-sm text-gray-500">${formatDate(master.created_at)}</p>
                        </div>
                        <div class="flex space-x-2">
                            <button onclick="viewMaster('${master.master_id}')" class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded">
                                <i class="fas fa-eye mr-1"></i>Открыть
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

                // Создать мастер-ролик
function createMasterVideo() {
    if (selectedAssets.size === 0) {
        alert('Выберите материалы для создания мастер-ролика');
        return;
    }

        
        // Переключить выбор материала

        // Обновить информацию о выборе

        // Очистить выбор

        // Просмотр мастер-ролика
        function viewMaster(masterId) {
            window.location.href = `/sync-editor.html?master_id=${masterId}`;
        }

        // Переключение вкладок
        function switchTab(tab) {
            // Скрыть все вкладки
            document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('border-indigo-600', 'text-indigo-600');
                btn.classList.add('border-transparent', 'text-gray-600');
            });

            // Показать выбранную
            document.getElementById(`content-${tab}`).classList.remove('hidden');
            document.getElementById(`tab-${tab}`).classList.remove('border-transparent', 'text-gray-600');
            document.getElementById(`tab-${tab}`).classList.add('border-indigo-600', 'text-indigo-600');
        }

        // Вспомогательные функции
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatDate(dateString) {
            if (!dateString) return 'Неизвестно';
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function getStatusColor(status) {
            const colors = {
                created: 'bg-gray-100 text-gray-800',
                generating: 'bg-blue-100 text-blue-800',
                ready: 'bg-green-100 text-green-800',
                failed: 'bg-red-100 text-red-800'
            };
            return colors[status] || 'bg-gray-100 text-gray-800';
        }

        function getStatusLabel(status) {
            const labels = {
                created: 'Создан',
                generating: 'Генерация',
                ready: 'Готов',
                failed: 'Ошибка'
            };
            return labels[status] || status;
        }

        // Загрузить при старте
        loadProject();
    </script>
</body>
</html>
