                        Мастер-ролики
                        <span id="masters-count" class="ml-2 bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs">0</span>
                    </button>
                    <button onclick="switchTab('scale')" id="tab-scale"
                            class="tab-button border-b-2 border-transparent text-gray-600 hover:text-gray-900 py-4 px-6 font-semibold">
                        <i class="fas fa-clone mr-2"></i>
                        Масштабирование
                        <span id="scale-count" class="ml-2 bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs">0</span>
                    </button>
                </nav>
            </div>
        </div>

        <!-- Контент вкладок -->
        <div id="tab-content">
            <!-- Assets Tab -->
            <div id="content-assets" class="tab-content">
                <div class="bg-white rounded-lg shadow p-6 mb-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold text-gray-900">Материалы проекта</h2>
                        <a href="/projects/new" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-semibold">
                            <i class="fas fa-plus mr-2"></i>
                            Загрузить материалы
                        </a>
                    </div>

                    <!-- Selection Info -->
                    <div id="selectionInfo" class="hidden mb-4"></div>
                    
                    <!-- Фильтры -->
                    <div class="flex space-x-2 mb-4">
                        <button onclick="filterAssets('all')" class="filter-btn bg-indigo-600 text-white px-4 py-2 rounded-lg">
                            Все
                        </button>
                        <button onclick="filterAssets('hook')" class="filter-btn bg-gray-100 text-gray-700 px-4 py-2 rounded-lg">
                            <i class="fas fa-fish text-green-600 mr-1"></i>Hooks
                        </button>
                        <button onclick="filterAssets('mid')" class="filter-btn bg-gray-100 text-gray-700 px-4 py-2 rounded-lg">
                            <i class="fas fa-film text-blue-600 mr-1"></i>Mids
                        </button>
                        <button onclick="filterAssets('cta')" class="filter-btn bg-gray-100 text-gray-700 px-4 py-2 rounded-lg">
                            <i class="fas fa-bullhorn text-orange-600 mr-1"></i>CTAs
                        </button>
                    </div>

                    <!-- Список материалов -->
                    <div id="assets-list" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-3">
                        <div class="col-span-full text-center py-8">
                            <i class="fas fa-spinner fa-spin text-3xl text-gray-400"></i>
                            <p class="text-gray-600 mt-2">Загрузка материалов...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Masters Tab -->
            <div id="content-masters" class="tab-content hidden">
